########################################
# Database Configuration
########################################
DB_URL=jdbc:postgresql://localhost:5432/customer_event_store
DB_USERNAME=customer_user
DB_PASSWORD=customer_password

########################################
# Kafka Configuration
########################################
KAFKA_BROKERS=localhost:29092
SCHEMA_REGISTRY_URL=http://localhost:8081
KAFKA_TRUSTSTORE_LOCATION=/etc/security/kafka.truststore.jks
KAFKA_TRUSTSTORE_PASSWORD=truststore_password
KAFKA_KEYSTORE_LOCATION=/etc/security/kafka.keystore.jks
KAFKA_KEYSTORE_PASSWORD=keystore_password
KAFKA_KEY_PASSWORD=key_password

########################################
# SSL Configuration
########################################
SSL_KEYSTORE_PATH=/etc/ssl/customer-write.p12
SSL_KEYSTORE_PASSWORD=keystore_password

########################################
# Observability Configuration
########################################
# Elasticsearch & Logstash
ELASTICSEARCH_HOST=elasticsearch
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5044

# Jaeger
JAEGER_ENDPOINT=http://jaeger-collector:14268/api/traces

# OpenTelemetry
OTEL_COLLECTOR_ENDPOINT=http://otel-collector:4317

########################################
# Alerting Configuration
########################################
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_URL
PAGERDUTY_SERVICE_KEY=your_pagerduty_service_key

########################################
# Docker & Kubernetes Configuration
########################################
DOCKER_REGISTRY=ecommerce.registry.example.com
DOCKER_TAG=latest
K8S_NAMESPACE=ecommerce

########################################
# Application Specific Configuration
########################################
# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Application Port
PORT=8080

# Memory Configuration
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200